@page
@model Korelskiy.GunShopASP.Pages.Products.ProductsModel
@{
    ViewData["Title"] = "Products";
    ViewData["ShowButtons"] = true;
}

@if (TempData["SuccessMessage"] != null)
	{
		 <div class="alert-success text-center">
			 @TempData["SuccessMessage"]
		 </div>
	}

<form method="get" class="mb-3">
	<div class="input-group">
		<input class="form-control" asp-for="SearchTerm"/>
		<div class="input-group-append">
			<button type="submit" class="btn btn-primary">Поиск</button>
		</div>
	</div>
</form>

@*@await Component.InvokeAsync("HeadCount")*@
<vc:head-count category="@null"></vc:head-count>

<div class="justify-content-center">
	<h1 class="text-center">Products</h1>

	<div class="row justify-content-center">
		<div class="col-lg-7">
			<div class="card-deck">
				<div class="card m-1 cardBoxShadow">
					<p></p><p class="text-center">Фильтрация</p>
					<p><input type="checkbox" unchecked>СССР</p>
					<p><input type="checkbox" unchecked>СССР</p>
					<p><input type="checkbox" unchecked>СССР</p>
					<p><input type="checkbox" unchecked>Винтовки</p>
					<p><input type="checkbox" unchecked>Пистолет-пулеметы</p>
					<p><input type="checkbox" unchecked>Пулеметы</p>
					<p><input type="radio" name="sort" unchecked>По цене(сначала дорогие)</p>
					<p><input type="radio" name="sort" unchecked>По цене(сначала дешевые)</p>
					<p><input type="radio" name="sort" unchecked>По алфавиту</p>
					<p class="align-self-lg-center"><button>Применить</button></p>
				</div>
			</div>
		</div>
	</div>
	<div class="row justify-content-center">
		@foreach (var item in Model.Products)
		{
			<div class="col-12 col-sm-10 col-lg-10">
				<partial name="_DisplayProductPartial" model="item"  view-data="ViewData"/>
			</div>
		}
	</div>
</div>



